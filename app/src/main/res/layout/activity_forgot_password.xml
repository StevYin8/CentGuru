<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_ForgotPasswordHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:textSize="34sp"
            android:text="@string/forgot_password_header" />

        <TextView
            android:id="@+id/txt_ForgotPasswordInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="24sp"
            android:text="@string/forgot_password_answer_questions" />

        <TextView
            android:id="@+id/txt_ForgotPasswordReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="24sp"
            android:text="@string/forgot_password_reset" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_ForgotPassword_user_name_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_ForgotPassword_user_name_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user_name"
                android:inputType="text"
                android:digits="@string/txt_filter"
                android:maxLength="30"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_ForgotPasswordQ1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etxt_ForgotPasswordQ1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What is your favorite pet?"
                android:inputType="text"
                android:digits="@string/txt_filter"
                android:maxLength="25"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_ForgotPasswordQ2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etxt_ForgotPasswordQ2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What is your favorite friend?"
                android:inputType="text"
                android:digits="@string/txt_filter"
                android:maxLength="25"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_ForgotPasswordQ3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etxt_ForgotPasswordQ3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What is your favorite teacher?"
                android:inputType="text"
                android:digits="@string/txt_filter"
                android:maxLength="25"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_ForgotPasswordSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/forgot_password_submit" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>